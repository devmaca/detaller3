extends ../doce.pug
block contenido
	
	div(class="col-md-6 remove-float")
		h3 Horarios
		.table-responsive
			table.table.table-bordered
				thead
					tr
						th Materias
						th Lunes
						th Martes
						th Miercoles
						th Jueves
						th Viernes
				tbody
					for lista in materias
						tr
							td #{lista.area}
		//- form(action="/doce/ver/"+persona+"?_method=PUT", method="post")
			
			div(class="form-group")
				label(for="pass") Nueva Contrasena 
				input(type="text", name="pass",placeholder="nueva contrasena",id="pass",class="form-control")
				label(for="pass2") Repetir Contrasena 
				input(type="text", name="pass2",placeholder="repetir contrasena",id="pass2",class="form-control")
						
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit",value="guardar",class="btn btn-info")