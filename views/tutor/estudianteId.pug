extends ../tuto.pug
block contenido
		h1 Calificaciones
		hr.bg-info
		.form-group.row
			label(for="est" class="col-form-label col-sm-2") Nombre:
			.col-sm-2
				input(type="text" class="form-control" id="est" name="est" value=personas[0].nombres, disabled)
			label(for="ap" class="col-form-label col-sm-2") Apellido:
			.col-sm-2
				input(type="text" class="form-control" id="ap" name="ap" value=personas[0].paterno, disabled)
			label(for="cur" class="col-form-label col-sm-2") Curso :
			.col-sm-2
				input(type="text" class="form-control" id="cur" name="curso" value=curso[0].curso, disabled)
			
		hr.bg-info
		.row
			div(class="col-sm-10")
				.form-group.row
					.col-sm-3
						a.btn.btn-info.btn-block(href='/tut/notas/'+personas[0].id_persona+'/1') PRIMER BIMESTRE
				.form-group.row
					.col-sm-3
						a.btn.btn-info.btn-block(href='/tut/notas/'+personas[0].id_persona+'/2') SEGUNDO BIMESTRE
				.form-group.row
					.col-sm-3
						a.btn.btn-info.btn-block(href='/tut/notas/'+personas[0].id_persona+'/3') TERCER BIMESTRE
				.form-group.row
					.col-sm-3
						a.btn.btn-info.btn-block(href='/tut/notas/'+personas[0].id_persona+'/4') CUARTO BIMESTRE
				.form-group.row
					.col-sm-3
						a.btn.btn-info.btn-block(href='/tut/notas/'+personas[0].id_persona+'/5') BOLETIN ANUAL
			div(class="col-sm-2")
				.form-group.row
					a.btn.btn-danger.btn-block(href='/tut/conductas/'+personas[0].id_persona) CONDUCTAS
				.form-group.row
					a.btn.btn-success.btn-block(href='/tut/horarios/'+personas[0].id_persona+'/'+curso[0].id_curso) HORARIOS