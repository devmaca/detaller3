extends ./home.pug
block contenido
		h1 Agregar curso
		form(class="form-inline" action="/home/curso", method="post")
			label(for="nivel" class="mr-sm-2") Nivel:
			input(type="text" class="form-control mb-2 mr-sm-2" id="nivel" name="nivel"
			placeholder="nivel")
			label(for="para" class="mr-sm-2") Paralelo
			input(type="text" class="form-control mb-2 mr-sm-2" id="para" name="para" placeholder="Paralelo")
			
			button(type="submit" value="" class="btn btn-success") guardar
		
		.table-responsive

			table.table
				thead
					tr
						th id
						th curso
				tbody
					for lista in cursos
						tr
							td #{lista.id_curso}
							td #{lista.curso}
							td 
								a(href= '/home/curso/'+lista.id_curso+'/edit' class="btn btn-outline-info btn-sm") editar
							td 
								form(action="/home/curso/"+lista.id_curso+"?_method=DELETE", class="",method="POST")
									input(type="submit", value="Eliminar" class="btn btn-outline-danger btn-sm")