extends ../doce.pug
block contenido
	div(class="col-md-6 remove-float center-block ")
		h2 editar datos de estudiante
		
		.form-group.row
			label(for="nom" class="col-form-label col-sm-2") Nombres:
			.col-sm-5
				input(type="text" class="form-control" id="nom" name="nomb" value=persona[0].nombres)
		.form-group.row
			label(for="apep" class="col-form-label col-sm-2") Apellido Pat:
			.col-sm-5
				input(type="text" class="form-control" id="apep" name="apep" value=persona[0].paterno)
		.form-group.row
			label(for="apem" class="col-form-label col-sm-2") Apellido Mat:
			.col-sm-5
				input(type="text" class="form-control" id="apem" name="apem"
				value=persona[0].materno)
		.form-group.row
			label(for="ci" class="col-form-label col-sm-2") Cedula Identidad:
			.col-sm-5
				input(type="text" class="form-control " id="ci" name="ci" value=persona[0].ci, disabled)
		.form-group.row
			label(for="dir" class="col-form-label col-sm-2") Direccion:
			.col-sm-5
				input(type="text" class="form-control"  id="dir" name="dir" value=persona[0].direccion)
		
		.form-group.row
			label(for="tel" class="col-form-label col-sm-2") Telefono:
			.col-sm-5
				input(type="text" class="form-control" id="tel" name="tel" value=persona[0].telefono)
		
		.form-group.row
			label(for="gen" class="col-sm-2") Genero:
			.col-sm-2
				input(type="text" class="form-control" id="gen" name="gen" value=persona[0].genero)
		.form-group.row
			label(for="fecha" class="col-form-label col-sm-2") Fecha Nacimiento:
			.col-sm-4
				input(type="text" class="form-control" id="fecha" name="fecha" value=persona[0].fecha_nac)
		
		.form-group.row
			label(for='estado' class="col-form-label col-sm-2")  Estado: 
			.col-sm-2
				input(type="text" class="form-control" id="estado" name="estado" value=persona[0].estado, disabled)
		a(href= '/doce/ver/'+persona[0].id_persona+'/edit' class="btn btn-outline-info btn-sm") cambiar contrasena
			
				