extends ../doce.pug
block contenido
		h2 Mis cursos 
		.form-group.row
			label(for="nom" class="col-form-label col-sm-2") Materia
			.col-sm-2
				input(type="text" class="form-control" id="mat" name="materia" value=materia[0].area, disabled)
		for cur in curso
			a.btn.btn-outline-info.btn-sm(href='/doce/mostrar/'+materia[0].id_materia+'/'+cur.id_curso) #{cur.curso}