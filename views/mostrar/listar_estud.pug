extends ../home.pug
block contenido
		h1 listar datos de estudiantes 
		.table-responsive

			table.table.table-bordered
				thead
					tr
						th nombre
						th paterno
						th materno
						th genero
						th fecha_nac
						th id estudiante
						th ci
						th estado
						th mod
						th eli
				tbody
					for per in personas
						tr
							td #{per.nombres}
							td #{per.paterno}
							td #{per.materno}
							if (per.genero==1)
								td masculino
							else
								if (per.genero==0)
									td femenino
							td #{per.fecha_nac}
							td #{per.id_estudiante}
							td #{per.ci}
							td #{per.estado}
							td 
								a(href= '/home/lisest/'+per.id_persona+'/edit' class="btn btn-outline-info btn-sm") editar
							td 
								form(action="/home/lisest/"+per.id_persona+"?_method=DELETE", class="",method="POST")
									input(type="submit", value="Eliminar" class="btn btn-outline-danger btn-sm")

		//- for lista in personas
